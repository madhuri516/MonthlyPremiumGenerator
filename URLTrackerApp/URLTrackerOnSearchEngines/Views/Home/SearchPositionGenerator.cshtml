@model URLTrackerOnSearchEngines.Models.SearchDetails

@{
    ViewData["Title"] = "URLPositionTracker";
}

<h4>URL Position Tracker</h4>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchPositionGenerator">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                            <label asp-for="SearchKeyword" class="control-label"></label>
                            <input asp-for="SearchKeyword" class="form-control" />
                            <span asp-validation-for="SearchKeyword" class="text-danger"></span>

             </div>
            <div class="form-group">
                      Search URL: <input class="form-control" type="text" value="https://www.simply.com.au" readonly />
            </div>

            <div class="form-group">
                <label asp-for="SearchEngine" class="control-label"></label>
                <br />
                <select id="SearchEngine" asp-for="SelectedItem" asp-items="Model.SearchEngine">
                </select>
                <span asp-validation-for="SearchEngine" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" id="btnSubmit" value="Pull Details" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


}