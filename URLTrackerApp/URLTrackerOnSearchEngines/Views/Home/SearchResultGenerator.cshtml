@model URLTrackerOnSearchEngines.Models.SearchDetails

@{
    ViewData["Title"] = "SearchResultGenerator";
}

<h4>SearchResultGenerator</h4>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchResultGenerator">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SearchKeyword" class="control-label"></label>
                <input asp-for="SearchKeyword" class="form-control" />
                <span asp-validation-for="SearchKeyword" class="text-danger"></span>
                
                Search URL: <input class="form-control" type="text" value="https://www.simply.com.au" readonly />
            </div>
            
            <div class="form-group">
                <label asp-for="SearchEngine" class="control-label"></label>
                <br />
                <select id="SearchEngine" asp-for="SelectedItem" asp-items="Model.SearchEngine">
                    <option>Select SearchEngine</option>
                </select>
                <span asp-validation-for="SearchEngine" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Pull Rank" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <label asp-for="Rank" class="control-label"></label>
                <input asp-for="Rank" class="form-control" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
